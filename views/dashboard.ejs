<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/tailwind.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/navmenu.css" rel="stylesheet" />
    <script
      src="https://kit.fontawesome.com/e96370e984.js"
      crossorigin="anonymous"
    ></script>

    <title>DNRP | Home</title>
    <link rel="icon" href="/images/daynnightlogo.png" type="image/x-icon" />
  </head>
  <body class="page">
    <!-- NAV BAR START-->
    <div id="nav-bar">
      <div id="nav-header">
        <a id="nav-title" href="/"
          ><img
            id="img"
            class="dnrpIcon"
            src="/images/daynnightlogo.png"
            alt="SupportLogo"
          /><i class="title"> DNRP | Vehicles</i></a
        >
        <hr />
      </div>
      <div id="nav-content">
        <a class="nav-button" href="/">
          <i class="fas fa-house"></i><span>Home</span>
        </a>
        <a class="nav-button" href="/my-garage">
          <i class="fas fa-car"></i><span>My Garage</span>
        </a>
        <a
          class="nav-button"
          href="https://store.dnrp.gg/checkout/packages/add/6353284/single"
        >
          <i class="fas fa-shop"></i><span>Buy a Civ Slot</span>
        </a>
        <a
          class="nav-button"
          href="https://store.dnrp.gg/checkout/packages/add/6353297/single"
        >
          <i class="fas fa-shop"></i><span>Buy a LEO Slot</span>
        </a>
        <% if (user.isStaff) { %>
        <hr />
        <a class="nav-button" href="/workshop">
          <i class="fas fa-warehouse"></i><span>The Workshop</span>
        </a>
        <a class="nav-button" href="/spawncodes">
          <i class="fas fa-truck-ramp-box"></i><span>Spawncodes</span>
        </a>
        <a class="nav-button" href="/slot-manager">
          <i class="fas fa-clipboard-list"></i><span>Slot Management</span>
        </a>
        <% } %> <% if (user.superAdmin) { %>
        <hr />
        <a class="nav-button" href="/user-management">
          <i class="fas fa-users"></i><span>User Management</span>
        </a>
        <a class="nav-button" href="/admin">
          <i class="fas fa-user-shield"></i><span>Admin Menu</span>
        </a>
        <% } %>
        <hr />
        <a class="nav-button" href="/settings">
          <i class="fas fa-gear"></i><span>Settings</span>
        </a>
        <a class="nav-button" href="/logout">
          <i class="fas fa-right-to-bracket"></i><span>Logout</span>
        </a>
        <div id="nav-content-highlight"></div>
      </div>
      <div id="nav-footer">
        <div id="nav-footer-heading">
          <div id="nav-footer-avatar">
            <img
              src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.discordId}/${user.avatar}.png` : 'default-avatar.png' %>"
            />
          </div>
          <div id="nav-footer-titlebox">
            <a id="nav-footer-title" target="_blank"><%= user.username %></a>
            <p id="nav-footer-subtitle">ID: <%= user.discordId %></p>
          </div>
        </div>
        <div id="nav-footer-content">
          <ul class="dropdown" aria-label="submenu">
            <li><a href="/settings">Settings</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
    <!-- NAV BAR END-->
    <div class="flex">
      <main class="flex-1 p-4">
        <div class="p-4"></div>
        <div id="title" class="flex justify-center doubleCont">
          <img
            class="textLogo"
            src="/images/daynnightlogo.png"
            alt="SupportLogo"
          />
          <h1 class="p-8 mb-6 text-3xl text-white font-bold underline">
            Welcome to the DNRP | Vehicle Garage!
          </h1>
          <img
            class="textLogo"
            src="/images/daynnightlogo.png"
            alt="SupportLogo"
          />
        </div>
        <div class="p-4"></div>
        <div class="doubleCont flex space-y-4 space-x-11">
          <div class="contentContainer float-left" id="about">
            <h1 class="text-3xl font-semibold mb-4">About this Portal..</h1>
            <p class="mb-6">
              Welcome to the DNRP | Vehicle Garage! Our portal is designed to
              provide you with a seamless and personalized experience, offering
              easy access to all the resources and tools you need to keep your
              fleet of whips, in tip top condition. Wether you need to give
              someone your keys, or give that engine a bit more power, or maybe
              you want to do something else. This portal has everything you
              need.
            </p>
            <br />
            <h1 class="mb-6 text-2xl font-bold">Features:</h1>
            <div class="px-4">
              <h3 class="mb-6 text-lg indent-1 font-bold">Garage:</h3>
              <p class="mb-6 indent-1">
                View all your vehicles in your garage at once! You can also set
                nicknames for your vehicles. Maybe you have a LMW 165i NSpert
                you want to call Tim, or a Murkedez SeeEllAyy Type you want to
                name Ronnie. You can do that here!
              </p>
              <h3 class="mb-6 text-lg indent-1 font-bold">
                Account Management:
              </h3>
              <p class="mb-6 indent-1">
                Update your personal information, change settings, and manage
                your preferences effortlessly (Coming soon).
              </p>
              <h3 class="mb-6 text-lg mx-5 font-bold">Progress:</h3>
              <p class="mb-6 indent-1">
                Track the progress of your vehicle imports, Modifications or any
                of our Mechanics (Developers)working on your vehicles
              </p>
            </div>
            <br />
            <br />
            <h1 class="mb-6 text-3xl text-white font-bold">
              Drive on in, <%= user.username %>!
            </h1>
          </div>
          <div class=""></div>
          <div class="contentContainer float-right">
            <div id="header">
              <h1 class="mb-6 text-2xl text-white font-bold underline">
                Messages from our Lead Mechanics...
              </h1>
            </div>

            <div id="leaderboard">
              <div class="ribbon"></div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>

<style>
  .bg-purp {
    color: rgb(255, 255, 255);
    background-color: rgb(108, 0, 128);
  }

  .doubleCont {
    margin-left: 5%;
    margin-right: 5%;
  }

  .contentContainer {
    width: 46%;
    border-radius: 0.5rem;
    float: left;
    margin-left: 2rem;
    margin-right: 2rem;
    background-color: #18283b;
    padding: 15px;
    color: white;
    border: solid 2px black;
    filter: drop-shadow(0 50px 25px rgb(0 0 0 / 0.15));
  }
  
  #leaderboard {
    width: 100%;
    position: relative;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed;
    color: #141a39;
    cursor: default;
  }

  tr {
    transition: all 0.2s ease-in-out;
    border-radius: 0.2rem;
  }

  tr:not(:first-child):hover {
    background-color: #fff;
    transform: scale(1.1);
    -webkit-box-shadow: 0px 5px 15px 8px #e4e7fb;
    box-shadow: 0px 5px 15px 8px #e4e7fb;
  }

  tr:not(:first-child):nth-child(odd) {
    background-color: var(--navbar-dark-secondary);
    color: #f9f9f9;
  }
  tr:nth-child(even) {
    color: #f9f9f9;
  }
  tr:hover {
    color: #2f2f2f;
  }

  tr:nth-child(1) {
    color: #fff;
  }

  td {
    height: 5rem;
    font-family: "Rubik", sans-serif;
    font-size: 1.4rem;
    padding: 1rem 2rem;
    position: relative;
  }

  .number {
    width: 1rem;
    font-size: 2.2rem;
    font-weight: bold;
    text-align: left;
  }

  .name {
    text-align: left;
    font-size: 1.2rem;
  }

  .points {
    font-weight: bold;
    font-size: 1.3rem;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .points:first-child {
    width: 10rem;
  }

  .gold-medal {
    height: 3rem;
    margin-left: 1.5rem;
  }
  .textLogo {
    height: 7rem;
    margin-right: 1.5rem;
    margin-left: 1.5rem;
  }

  .ribbon {
    width: inherit;
    height: 5.5rem;
    top: -0.5rem;
    background-color: #5c5be5;
    position: absolute;
    -webkit-box-shadow: 0px 15px 11px -6px #7a7a7d;
    box-shadow: 0px 15px 11px -6px #7a7a7d;
  }

  .ribbon::before {
    content: "";
    height: 1.5rem;
    width: 1rem;
    bottom: -0.8rem;
    left: 0.35rem;
    transform: rotate(45deg);
    background-color: #5c5be5;
    position: absolute;
    z-index: -1;
  }

  .ribbon::after {
    content: "";
    height: 1.5rem;
    width: 1.5rem;
    bottom: -0.8rem;
    right: 0.35rem;
    transform: rotate(45deg);
    background-color: #5c5be5;
    position: absolute;
    z-index: -1;
  }

  @media (max-width: 740px) {
    * {
      font-size: 70%;
    }
  }

  @media (max-width: 500px) {
    * {
      font-size: 55%;
    }
  }

  @media (max-width: 390px) {
    * {
      font-size: 45%;
    }
  }
</style>
